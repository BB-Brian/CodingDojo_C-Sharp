@model Bid
<span>
        <h1 style="display: inline-block; margin-right: 447px;">
            <h1>@ViewBag.CurrentAuction.Product</h1>
            <h4>Created by: @ViewBag.CurrentAuction.User.FirstName</h4>
        <a href="/Dashboard";>Dashboard</a>
        <a href="/Logout" style="margin-left: 25px">Logout</a>
    </span>

</p>Time Remaining: @ViewBag.CurrentAuction.EndDate</p>
</p>@ViewBag.CurrentAuction.Description</p>
</p>Starting Bid: @ViewBag.CurrentAuction.StartingBid</p>
@foreach(var bid in @ViewBag.HighestBid)
{
<p>Current Highest Bid: @bid.BidAmount</p>

}

<br>
<form action="/CreateBid/@ViewBag.CurrentAuction.AuctionId" method="POST">
    <input type="text" name="BidAmount" placeholder="Your bid goes here...">

    <input type="submit" value="Bid!!">
</form>
 
