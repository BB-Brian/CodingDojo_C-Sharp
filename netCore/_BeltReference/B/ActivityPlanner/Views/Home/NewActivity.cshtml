@model ActivityPlanned

<h1> Create an Activity </h1>

<form action="/CreateActivity" method="POST">
    <span asp-validation-for="Title"></span>
    <label>Title: </label>
    <input asp-for="Title">
    <br>

    <span asp-validation-for="DateTime"></span>
    <label>Date and Time: </label>
    <input asp-for="DateTime">
    <br>

    <span asp-validation-for="Duration"></span>
    <label>Duration: </label>
    <input asp-for="Duration">
    <br>

    <span asp-validation-for="DurationType"></span>
    <label>DurationType: </label>
    <input asp-for="DurationType">
    <br>

    <input type="submit" value="Create Activity">
</form>